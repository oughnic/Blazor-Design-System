@namespace Blazor.DesignSystem.Components

<footer class="govuk-footer @CssClass" role="contentinfo" @attributes="AdditionalAttributes">
    <div class="govuk-width-container">
        @if (Navigation != null)
        {
            <div class="govuk-footer__navigation">
                @Navigation
            </div>
            <hr class="govuk-footer__section-break">
        }
        <div class="govuk-footer__meta">
            <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
                @if (MetaLinks != null)
                {
                    <h2 class="govuk-visually-hidden">Support links</h2>
                    <ul class="govuk-footer__inline-list">
                        @MetaLinks
                    </ul>
                }
                @if (CustomContent != null)
                {
                    @CustomContent
                }
                @if (!string.IsNullOrWhiteSpace(LicenceText))
                {
                    <span class="govuk-footer__licence-description">
                        @((MarkupString)LicenceText)
                    </span>
                }
            </div>
            @if (!string.IsNullOrWhiteSpace(CopyrightText))
            {
                <div class="govuk-footer__meta-item">
                    <a class="govuk-footer__link govuk-footer__copyright-logo" href="@CopyrightUrl">
                        @CopyrightText
                    </a>
                </div>
            }
        </div>
    </div>
</footer>

@code {
    /// <summary>
    /// The navigation content (should contain footer navigation sections).
    /// </summary>
    [Parameter]
    public RenderFragment? Navigation { get; set; }

    /// <summary>
    /// The meta links content (should contain li elements with links).
    /// </summary>
    [Parameter]
    public RenderFragment? MetaLinks { get; set; }

    /// <summary>
    /// Custom content to display in the meta area.
    /// </summary>
    [Parameter]
    public RenderFragment? CustomContent { get; set; }

    /// <summary>
    /// The licence text (can contain HTML).
    /// </summary>
    [Parameter]
    public string? LicenceText { get; set; }

    /// <summary>
    /// The copyright text.
    /// </summary>
    [Parameter]
    public string? CopyrightText { get; set; }

    /// <summary>
    /// The URL for the copyright link.
    /// </summary>
    [Parameter]
    public string? CopyrightUrl { get; set; }

    /// <summary>
    /// Additional CSS classes to apply.
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    /// <summary>
    /// Additional HTML attributes to apply.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
