@namespace Blazor.DesignSystem.Components

<dl class="govuk-summary-list @(NoBorder ? "govuk-summary-list--no-border" : "") @CssClass" @attributes="AdditionalAttributes">
    @ChildContent
</dl>

@code {
    /// <summary>
    /// The summary list content (should contain GovUkSummaryListRow components).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Whether to hide borders.
    /// </summary>
    [Parameter]
    public bool NoBorder { get; set; }

    /// <summary>
    /// Additional CSS classes to apply.
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    /// <summary>
    /// Additional HTML attributes to apply.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
