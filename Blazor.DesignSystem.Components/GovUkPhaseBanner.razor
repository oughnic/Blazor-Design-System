@namespace Blazor.DesignSystem.Components

<div class="govuk-phase-banner @CssClass" @attributes="AdditionalAttributes">
    <p class="govuk-phase-banner__content">
        <strong class="govuk-tag govuk-phase-banner__content__tag">
            @Tag
        </strong>
        <span class="govuk-phase-banner__text">
            @ChildContent
        </span>
    </p>
</div>

@code {
    /// <summary>
    /// The phase tag text (e.g., "Alpha", "Beta").
    /// </summary>
    [Parameter]
    public string Tag { get; set; } = "Beta";

    /// <summary>
    /// The banner text content.
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Additional CSS classes to apply.
    /// </summary>
    [Parameter]
    public string? CssClass { get; set; }

    /// <summary>
    /// Additional HTML attributes to apply.
    /// </summary>
    [Parameter(CaptureUnmatchedValues = true)]
    public Dictionary<string, object>? AdditionalAttributes { get; set; }
}
