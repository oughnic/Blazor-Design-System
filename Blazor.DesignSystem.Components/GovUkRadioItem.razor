@namespace Blazor.DesignSystem.Components
@using System.Threading

@{
    var itemId = !string.IsNullOrWhiteSpace(Id) ? Id : $"{Radios?.Name}-{Index}";
}

<div class="govuk-radios__item">
    <input class="govuk-radios__input" 
           id="@itemId" 
           name="@Radios?.Name" 
           type="radio" 
           value="@Value"
           checked="@IsChecked"
           disabled="@Disabled"
           @onchange="HandleChange"
           aria-describedby="@GetAriaDescribedBy(itemId)"
           aria-controls="@(HasConditional && ConditionalContent != null ? $"conditional-{itemId}" : null)">
    <label class="govuk-label govuk-radios__label" for="@itemId">
        @if (ChildContent != null)
        {
            @ChildContent
        }
        else
        {
            @Label
        }
    </label>
    @if (!string.IsNullOrWhiteSpace(Hint))
    {
        <div id="@(itemId)-hint" class="govuk-hint govuk-radios__hint">
            @Hint
        </div>
    }
</div>
@if (HasConditional && ConditionalContent != null)
{
    <div class="govuk-radios__conditional @(IsChecked ? "" : "govuk-radios__conditional--hidden")" id="conditional-@itemId">
        @ConditionalContent
    </div>
}

@code {
    private static int _globalIndex = 0;
    private int Index { get; set; }

    [CascadingParameter]
    private GovUkRadios? Radios { get; set; }

    /// <summary>
    /// The unique identifier for the radio.
    /// </summary>
    [Parameter]
    public string? Id { get; set; }

    /// <summary>
    /// The value of the radio.
    /// </summary>
    [Parameter, EditorRequired]
    public string Value { get; set; } = string.Empty;

    /// <summary>
    /// The label text for the radio.
    /// </summary>
    [Parameter]
    public string? Label { get; set; }

    /// <summary>
    /// The label content (takes precedence over Label).
    /// </summary>
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    /// <summary>
    /// Hint text to display below the label.
    /// </summary>
    [Parameter]
    public string? Hint { get; set; }

    /// <summary>
    /// Whether the radio is disabled.
    /// </summary>
    [Parameter]
    public bool Disabled { get; set; }

    /// <summary>
    /// Whether the radio has conditional content.
    /// </summary>
    [Parameter]
    public bool HasConditional { get; set; }

    /// <summary>
    /// Content to display when the radio is selected.
    /// </summary>
    [Parameter]
    public RenderFragment? ConditionalContent { get; set; }

    private bool IsChecked => Radios?.IsSelected(Value) ?? false;

    protected override void OnInitialized()
    {
        Index = Interlocked.Increment(ref _globalIndex);
    }

    private async Task HandleChange(ChangeEventArgs e)
    {
        if (Radios != null)
        {
            await Radios.SelectValue(Value);
        }
    }

    private string? GetAriaDescribedBy(string itemId)
    {
        if (!string.IsNullOrWhiteSpace(Hint))
        {
            return $"{itemId}-hint";
        }
        return null;
    }
}
