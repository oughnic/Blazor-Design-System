@page "/components/task-list"
@using Blazor.DesignSystem.Components

<PageTitle>Task list - GOV.UK Design System</PageTitle>

<h1 class="govuk-heading-xl">Task list</h1>
<p class="govuk-body">The task list component displays all the tasks a user needs to do, and allows users to easily identify which ones are done and which they still need to do.</p>

<h2 class="govuk-heading-l">When to use this component</h2>
<p class="govuk-body">Use the task list component to give users an overview of the tasks they need to complete as part of a longer transaction.</p>

<h2 class="govuk-heading-l">Examples</h2>

<h3 class="govuk-heading-m">Default task list</h3>
<GovUkTaskList Items="@basicTasks" />

<h3 class="govuk-heading-m govuk-!-margin-top-6">Task list with hints</h3>
<GovUkTaskList Items="@tasksWithHints" />

<h3 class="govuk-heading-m govuk-!-margin-top-6">Task list with different statuses</h3>
<GovUkTaskList Items="@tasksWithStatuses" />

<h3 class="govuk-heading-m govuk-!-margin-top-6">Task list for application process</h3>
<h2 class="govuk-heading-l">Apply for a passport</h2>
<GovUkTaskList Items="@passportTasks" IdPrefix="passport" />

@code {
    private List<GovUkTaskList.TaskListItem> basicTasks = new()
    {
        new GovUkTaskList.TaskListItem
        {
            Title = "Company information",
            Href = "/company-information",
            StatusText = "Completed"
        },
        new GovUkTaskList.TaskListItem
        {
            Title = "Contact details",
            Href = "/contact-details",
            StatusTag = new GovUkTaskList.TaskListStatusTag { Text = "Not started", Color = "blue" }
        },
        new GovUkTaskList.TaskListItem
